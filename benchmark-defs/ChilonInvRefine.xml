<?xml version="1.0"?>
<!DOCTYPE benchmark PUBLIC "+//IDN sosy-lab.org//DTD BenchExec benchmark 1.18//EN" "https://www.sosy-lab.org/benchexec/benchmark-1.18.dtd">
<benchmark tool="tools.chiloninv"
           displayName="ChilonInvRefine"
           timelimit="15min">
  <rundefinition>
    <option name="-cra" />
    <option name="-no-fgb" />
    <option name="-monotone" />
    <option name="-lirr" />
    <option name="-cra-refine" />

    <tasks name="C4B">
      <include>../tasks/C4B/*.yml</include>
      <propertyfile>../properties/unreach-call.prp</propertyfile>
    </tasks>
    <tasks name="HOLA">
      <include>../tasks/HOLA/*.yml</include>
      <propertyfile>../properties/unreach-call.prp</propertyfile>
    </tasks>
    <tasks name="NLA">
       <includesfile>../tasks/reach_safety_loops_nla.set</includesfile>
      <propertyfile>../tasks/properties/unreach-call.prp</propertyfile>
    </tasks>
    <tasks name="NLA-scaling">
       <includesfile>../tasks/reach_safety_loops_nla_scaling.set</includesfile>
      <propertyfile>../tasks/properties/unreach-call.prp</propertyfile>
    </tasks>
    <tasks name="NLA-noinv">
       <includesfile>../tasks/reach_safety_loops_nlanoinv.set</includesfile>
      <propertyfile>../tasks/properties/unreach-call.prp</propertyfile>
    </tasks>
    <tasks name="loops">
      <includesfile>../tasks/reach_safety_loops.set</includesfile>
      <propertyfile>../tasks/properties/unreach-call.prp</propertyfile>
    </tasks>
    <tasks name="loops-validate">
      <includesfile>../tasks/loops_validate.set</includesfile>
      <propertyfile>../tasks/properties/unreach-call.prp</propertyfile>
    </tasks>        
  </rundefinition>

</benchmark>
